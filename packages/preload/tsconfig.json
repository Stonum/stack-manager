{
   "compilerOptions": {
      "module": "esnext",
      "target": "esnext",
      "sourceMap": false,
      "moduleResolution": "Node",
      "skipLibCheck": true,
      "strict": true,
      "isolatedModules": true,
      "types": [
         "node"
      ],
      "baseUrl": ".",
   },
   "files": [
      "src/**/*.ts",
      "../../types/**/*.d.ts"
   ],
   "exclude": [
      "**/*.spec.ts",
      "**/*.test.ts"
   ]
}